  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@playwright/test": "^1.58.2",
    "@preact/preset-vite": "^2.10.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^25.3.0",
    "dompurify": "^3.3.1",
    "jsdom": "^28.1.0",
    "serve": "^14.2.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@preact/signals": "^2.8.1",
    "preact": "^10.28.4"
  }
