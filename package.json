{
  "name": "glasspane",
  "version": "0.1.0",
  "description": "Browser teleprompter with Cloudflare Workers backend",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "build": "vite build",
    "dev": "vite dev",
    "typecheck": "tsc --noEmit",
